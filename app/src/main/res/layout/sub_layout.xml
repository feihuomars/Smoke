<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_addDeviced"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@mipmap/start"
    android:layout_height="match_parent">
    <include layout="@layout/dingyuetitle"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消息等级"
        android:id="@+id/editText3"
        android:layout_marginBottom="128dp"
        android:layout_alignBottom="@+id/subscrible"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/qos"
        android:layout_toStartOf="@+id/qos"
        android:textColor="?attr/editTextColor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备编号"
        android:id="@+id/editText2"
        android:layout_above="@+id/editText3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="44dp"
        android:layout_toLeftOf="@+id/topic"
        android:layout_toStartOf="@+id/topic"
        android:textColor="?android:attr/textColorPrimary" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/topic"
        android:layout_alignBaseline="@+id/editText2"
        android:layout_alignBottom="@+id/editText2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="warning"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignBottom="@+id/editText3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/qos"
        android:layout_toRightOf="@+id/editText2"
        android:layout_toEndOf="@+id/editText2"
        android:text="0"/>

    <Button
        android:text="绑定设备"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subscrible"
        android:layout_marginBottom="90dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/qos"
        android:layout_toStartOf="@+id/qos"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

    <Button
        android:text="取消绑定"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/subscrible"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:id="@+id/unsub" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未绑定"
        android:ems="10"
        android:layout_alignTop="@+id/editText5"
        android:id="@+id/Stateofsub"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/unsub"
        android:layout_alignStart="@+id/unsub" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/set"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:id="@+id/seting" />

    <ImageView
        android:layout_width="120dp"
        android:visibility="visible"
        android:layout_height="120dp"
        android:src="@mipmap/people"
        android:id="@+id/imageView4"
        android:layout_above="@+id/editText2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

</RelativeLayout>